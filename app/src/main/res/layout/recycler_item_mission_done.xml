<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondary_grey_black_12">


    <ImageView
        android:id="@+id/mission_done_iv_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_board_fire_3x" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="8dp"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mission_done_iv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_board_user" />

        <TextView
            android:id="@+id/mission_done_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="인증 완료"
            android:textColor="@color/secondary_grey_black_5"
            android:textSize="16dp" />
    </LinearLayout>


</LinearLayout>